@model IEnumerable<TvcLesson04.Models.Book>


@{
    ViewData["Title"] = "TvcIndex";
}

<h1>Danh sách các cuốn sách</h1>
<form action="/" method="post" class="form-inline" role="form">
   <div class="form-group">
        <select name="AuthorId" class="form-control" asp-items="ViewBag.authors">
            <option value="">Chọn tác giả</option>
        </select>
        <select name="GenreId" class="form-control" asp-items="ViewBag.genres">
            <option value="">Chọn thể loại</option>
        </select>
   </div>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tiêu đề</th>
            <th>Tác giả</th>
            <th>Thể loại</th>
            <th>Giá</th>
            <th>Hình ảnh</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var book in Model){
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.AuthorId</td>
                <td>@book.GenreId</td>
                <td>@book.price</td>
                <td>
                    <img src="@book.Image" alt="@book.Title" width="40"/>
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-primary">Sửa</a>
                </td>
            </tr>
        }
    </tbody>
</table>