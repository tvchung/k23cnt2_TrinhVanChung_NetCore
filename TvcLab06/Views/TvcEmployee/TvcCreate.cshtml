@model TvcLab06.Models.TvcEmployee

@{
    ViewData["Title"] = "Thêm mới nhân viên";
}
<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <form asp-action="TvcCreate" method="post">

        <div class="input-group mb-3">
            <span class="input-group-text">Họ tên</span>
            <input asp-for="TvcName" class="form-control" placeholder="Nhập họ tên" />
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text">Ngày sinh</span>
            <input asp-for="TvcBirthDay" type="date" class="form-control" />
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text">Email</span>
            <input asp-for="TvcEmail" class="form-control" placeholder="Email nhân viên" />
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text">📞</span>
            <input asp-for="TvcPhone" class="form-control" placeholder="Số điện thoại" />
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text">₫</span>
            <input asp-for="TvcSalary" class="form-control" placeholder="Lương cơ bản" />
        </div>

        <div class="input-group mb-4">
            <label class="input-group-text" for="statusSelect">Trạng thái</label>
            <select asp-for="TvcStatus" id="statusSelect" class="form-select">
                <option value="true">Đang làm</option>
                <option value="false">Nghỉ việc</option>
            </select>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-success">💾 Lưu lại</button>
            <a asp-action="TvcIndex" class="btn btn-secondary">🔙 Quay lại</a>
        </div>

    </form>
</div>